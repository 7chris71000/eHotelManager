<div class="row">
  <div class="col-sm"></div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">

        <%#= form_tag("/rooms/#{params[:id]}/edit", method: "put") do %>
        <%= form_for(@room_empty) do |f| %>
          <h4 class="card-title" style="color: #FF250D;">Update Room <%=@room["RoomID"]%>:</h4>
          <!--<h4 class="card-title" style="color: #FF250D;">Login</h4>-->
          <ul> 
            <li><label>Price<span class="required">*</span></label>
            <input type="float" class="form-control" name="price" id="price" value="<%= @room["Price"] %>"></li>

            <li><label>Capacity<span class="required">*</span></label>
            <input type="int" class="form-control" name="capacity" id="capacity" value="<%= @room["Capacity"] %>"></li>

            <li><label>Extendable<span class="required">*</span></label>
            <select class="form-control" id="extendable" name="extendable">
            <% if @room["Extendable"] %>
                <option value="True" selected>True</option>
                <option value="False">False</option>
            <% else %> 
                <option value="True">True</option>
                <option value="False" selected>False</option>
            <% end %>
            </select></li>

            <li><label>Status<span class="required">*</span></label>
            <select class="form-control" id="status" name="status">
              <% if @room["Status"] == "Available" %>
                <option value="Available" selected>Available</option>
                <option value="Booked">Booked</option>
                <option value="Rented">Rented</option>
              <% elsif @room["Status"] == "Booked" %>
                <option value="Available">Available</option>
                <option value="Booked" selected>Booked</option>
                <option value="Rented">Rented</option>
              <% else %>
                <option value="Available">Available</option>
                <option value="Booked">Booked</option>
                <option value="Rented" selected>Rented</option>
              <% end %>  
            </select></li>

            <li><label>View<span class="required">*</span></label>
            <select class="form-control" id="sel2" id="view" name="view">
              <% if @room["View"] == "Sea" %>
                <option value="Sea" selected>Sea</option>
                <option value="Mountain">Mountain</option>
            <% else %> 
                <option value="Sea">Sea</option>
                <option value="Mountain" selected>Mountain</option>
            <% end %>
            </select></li>

            <li><label>Amenities<span class="required"> (Separate by commas)</span></label>
              <input type="text" class="form-control" name="amenities">
            </li>

            <li><label>Problems<span class="required"> (Separate by commas)</span></label>
              <input type="text" class="form-control" name="problems">
            </li>

            <li>
            
              <%= submit_tag "Confirm", class: "btn btn-success", :style => "margin-top: 2.5%; margin-right: 2.5%" %>
              <%= link_to "Cancel", filter_path, class: "btn btn-danger", :style => "margin-top: 2.5%; margin-right: 2.5%" %>
            </li>

          </ul>
        <% end %>

      </div>
    </div>
  </div>
  <div class="col-sm"></div>
</div>
