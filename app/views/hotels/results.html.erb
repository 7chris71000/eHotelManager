
<h2>Results:
  
  <% if current_user.user_type == 'employee' %>
    <%= link_to 'Add Room', new_room_path, class: "btn btn-success" %>
    <%= link_to 'Hotel Chains', hotel_chains_path, style: "float: right; margin-top: 3px;", class: "btn btn-info" %>
  <% end %>
</h2>


<table class="table" style="margin-top: 2.55%; text-align: center">
  <thead class="thead-dark">
    <tr>
      <th>Room Number</th>
      <th>Address</th>
      <th>City</th>
      <th>Contact Email</th>
      <th>Number of Rooms</th>
      <th>Star Rating</th>
      <th>Chain Price</th>
      <% if current_user.user_type == 'employee' %>
      <th>Status</th>
      <% end %>
      <th>View</th>
      <th>Capacity</th>
      <th>Book Room</th>
      <% if current_user.user_type == 'employee' %>
      <th>Update Room</th>
      <th>Delete Room</th> 
      <% end %>  
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
    <tr>
      <td><%= link_to room["RoomID"], room_path(room["RoomID"]) %></td>
      <td><%= room["HotelAddress"] %></td>
      <td><%= room["City"] %></td>
      <td><%= room["ContactEmail"] %></td>
      <td><%= room["NoOfRooms"] %></td>
      <td><%= room["Category"] %></td>
      <td><%= room["Price"] %></td>
      <% if current_user.user_type == 'employee' %>
      <td><%= link_to room["Status"],"/list" ,class: "btn btn-outline-secondary btn-sm" %></td>
      <% end %>
      <td><%= room["WindowView"] %></td>
      <td><%= room["Capacity"] %></td>
      <td><%= link_to 'Book', edit_room_path(room["RoomID"]), class: "btn btn-success" %></td>
      <% if current_user.user_type == 'employee' %>
      <td><%= link_to 'Update', edit_room_path(room["RoomID"]), class: "btn btn-outline-primary" %></td>
      <td><%= link_to "Delete", "/rooms/#{room["RoomID"]}", {method: :delete, data: {confirm: "Are you sure you want to delete this room?"}, class: "btn btn-outline-danger" } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>