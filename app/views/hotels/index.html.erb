
<h2>Results: <button type="button" class="btn btn-danger">Filter</button></h2>

<table class="table" style="margin-top: 2.55%; text-align: center">
  <thead class="thead-dark">
    <tr>
      <th>Room Number</th>
      <th>Address</th>
      <th>City</th>
      <th>Contact Email</th>
      <th>Number of Rooms</th>
      <th>Star Rating</th>
      <th>Chain Price</th>
      <th>Status</th>
      <th>View</th>
      <th>Capacity</th>
      <th>Book Room</th>
      <% if !current_user.customer %>
        <th>Update Room</th>
        <th>Delete Room</th> 
      <% end %>  
    </tr>
  </thead>
  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>

        <td><%= link_to hotel["RoomID"], room_path(hotel["RoomID"]) %></td>
        <td><%= hotel["HotelAddress"] %></td>
        <td><%= hotel["City"] %></td>
        <td><%= hotel["ContactEmail"] %></td>
        <td><%= hotel["NoOfRooms"] %></td>
        <td><%= hotel["Category"] %></td>
        <td><%= hotel["Price"] %></td>
        <td><%= hotel["Status"] %></td>
        <td><%= hotel["View"] %></td>
        <td><%= hotel["Capacity"] %></td>
        <td><%= link_to 'Book', edit_room_path(hotel["RoomID"]), class: "btn btn-success" %></td>
        <% if !current_user.customer %>
        <td><%= link_to 'Update', edit_room_path(hotel["RoomID"]), class: "btn btn-primary" %></td>
        <td><%= link_to "Delete", "/rooms/#{hotel["RoomID"]}", {method: :delete, data: {confirm: "Are you sure you want to delete this room?"}, class: "btn btn-danger" } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>